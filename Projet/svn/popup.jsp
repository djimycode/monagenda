<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crée évènement</title>
    <link rel="stylesheet" type="text/css" href="css/popup.css"/>

</head>
<body>
<div class="popup has-title has-controls" style="display: inline-block;">
    <div class="message">
        <div class="message-inner">
            <form action="#">
                <div class="title-bar">Nouvel événement</div>
                <div class="content">

                    <div class="property property-block"><span class="property-value">
                        <table class="full-width">
                            <tbody>
                            <tr>
                                <td class="min">
                        <i class="fa fa-fw fa-calendar-o icon-left"></i>
                                </td>
                        <td>
                            <input autofocus="" required="" class="input text-input full-width" name="title" placeholder="Nom" value="" type="text">
                        </td>
                            </tr>
                            </tbody>
                        </table>
                    </span>
                    </div>

                    <div class="property property-block">
                        <span class="property-value">
                            <table class="full-width">
                                <tbody>
                                <tr>
                                    <td class="min">
                                        <i class="fa fa-fw fa-map-marker icon-left"></i>
                                    </td>
                                    <td>
                                        <input class="input text-input full-width" name="place" placeholder="Lieu" value=""
                            type="text">
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </span>
                    </div>

                    <div class="property property-block">
                        <span class="property-value">
                            <table class="full-width">
                                <tbody>
                                <tr>
                                    <td class="min">
                                        <i class="fa fa-fw fa-info icon-left"></i>
                                    </td>
                                    <td>
                                        <p>Description</p>
                                        <textarea rows="4" cols="50" class="input text-input full-width" name="description" placeholder="Description" data-dynamic="true">
                                        </textarea>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </span>
                    </div>

                    <div class="property property-block">
                        <div class="property-name">Date</div>
                    </div>

                    <div class="property property-block"><span class="property-value"><label><input name="all_day"
                                                                                                    class="icon-left"
                                                                                                    type="checkbox">Journée entière</label></span>
                    </div>

                    <div class="property property-block">
                        <table>
                            <tbody>
                            <tr>
                                <td><span class="icon-left"><i class="fa fa-clock-o icon-left"></i>Début</span></td>
                                <td class =timed><input type="time" name="heure_début" value="00:00"></td>
                            </tr>
                            <tr style="height: 6px;"></tr>
                            <tr>
                                <td><span class="icon-left"><i class="fa fa-clock-o icon-left"></i>Fin</span></td>
                                <td><input type="time" name="heure_fin" value="23:00"></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="property property-block">
                        <div class="property-name">
                            <table class="full-width">
                                <tbody>
                                <tr>
                                    <td><span class="icon-left">Participants</span></td>
                                    <td class="min">
                                        <button class="button button-blue button-link event-pick-users" type="button"><i
                                                class="fa fa-user-plus icon-left"></i>Inviter des participants
                                        </button>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="controls">
                    <div class="float-right">
                        <button type="button" class="button cancel dismiss">Annuler</button>
                        <button type="submit" class="button button-green"><i
                                class="fa fa-calendar-plus-o icon-left"></i>Ajouter
                        </button>
                    </div>

                    <div class="clear"></div>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>



